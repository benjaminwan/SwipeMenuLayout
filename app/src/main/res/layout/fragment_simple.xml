<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    app:divider="?android:attr/listDivider"
    app:showDividers="middle">

    <com.benjaminwan.swipemenulayout.SwipeMenuLayout
        android:id="@+id/simpleSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_grey5_to_grey7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftIv"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_green5_to_green7"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right"
                app:tint="@color/selector_white_to_grey5" />

            <TextView
                android:id="@+id/demoTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Simple Usage"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/rightIv"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_blue5_to_blue7"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left"
                app:tint="@color/selector_white_to_grey5" />

        </LinearLayout>

    </com.benjaminwan.swipemenulayout.SwipeMenuLayout>

</androidx.appcompat.widget.LinearLayoutCompat>