<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_amber5_to_amber7"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftIv"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_green5_to_green7"
        android:scaleType="centerInside"
        android:src="@drawable/ic_right"
        app:tint="@color/selector_white_to_grey5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="Test"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/rightIv"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue5_to_blue7"
        android:scaleType="centerInside"
        android:src="@drawable/ic_left"
        app:tint="@color/selector_white_to_grey5" />

</LinearLayout>

